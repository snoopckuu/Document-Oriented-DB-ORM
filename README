ORM FOR SimpleDB

USAGE:

$user = new User();
$user->setName('daniel')->setPassword('test')->save();
var_dump($user->getPK());
var_dump($user->isNew());
var_dump($user->isModified());
var_dump($user->getAttributes());
var_dump($user->getModifiedAttributes());
$user->save();
var_dump($user->getPK());
var_dump($user->isNew());
var_dump($user->isModified());
var_dump($user->getAttributes());
var_dump($user->getModifiedAttributes());
